<p id="notice"><%= notice %></p>

<h2>Your cart</h2>
<ul>
  <% @cart.line_items.each do |a| %>
    <li><%= a.quantity %> x <%= a.product.title %></li>
  <% end %>
</ul>
<%= button_to 'Empty cart',
              @cart,
              :method => :delete,
              data: {:confirm => 'Are you sure?'} %>
<%= link_to 'Edit', edit_cart_path(@cart) %> |
<%= link_to 'Back', carts_path %>
